{
  "presets": [
    "es2015",
    "react",
    "stage-1"
  ],

  "plugins": [
    "transform-function-bind",
    ["transform-runtime", {
      "polyfill": false,
      "regenerator": true
    }]
  ],

  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": [
        "react-optimize"
      ]
    },
    "test": {
      "plugins": [
        ["istanbul", {"exclude": ["**/*.spec.js"]}]
      ]
    }
  }
}
